<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/custom_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_title_height"
    android:background="@color/custom_red">

    <RelativeLayout
        android:id="@id/custom_title_back_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/custom_page_hor_padding">

        <ImageView
            android:id="@id/custom_title_back_btn"
            android:layout_width="@dimen/news_detail_backarrow_width"
            android:layout_height="@dimen/news_detail_backarrow_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/custom_title_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/custom_gap_10"
            android:layout_toRightOf="@id/custom_title_back_btn"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/font_text_size_30" />
    </RelativeLayout>

    <TextView
        android:id="@id/custom_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxEms="12"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/font_text_size_34" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/custom_divline_width"
        android:layout_alignParentBottom="true"
        android:background="@color/custom_divline" />
</RelativeLayout>